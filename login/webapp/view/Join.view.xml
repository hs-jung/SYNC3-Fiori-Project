<mvc:View controllerName="login.controller.Join"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <FlexBox
        alignItems="Center"
        justifyContent="Center"
        width="100%"
        height="100%">
        <!-- sap.ui.layout.Grid -->
        <l:Grid >
            <Panel accessibleRole="Region">
                <layoutData>
                    <l:GridData span="XL12 L12 M12 S12" />
                </layoutData>
                <content >
                    <f:SimpleForm>
                        <f:content >
                            
                                 <Text class="row" text="회원가입" />
                            
                            
                                <Label class="row" text="아이디" />
                            
                            
                                <Input class="row" id="idLoginid"  value="" placeholder="아이디"  change="onidChange"/>
                            
                            
                                <Label class="row" text="비밀번호" />
                            
                            
                                <Input class="row" id="idPassword1" value="" placeholder="비밀번호" type="Password" />
                            
                            
                                <Label class="row" text="비밀번호 확인" />
                            
                            
                                <Input class="row" id="idPassword2" value="" placeholder="비밀번호" type="Password" />
                            
                            
                                <HBox class="divisionLine row"/>
                            
                            
                                <Button class="btnLogin row" width="100%" press="onJoinus" type="Emphasized" text="회원가입" />
                            
                        </f:content>
                    </f:SimpleForm>
                </content>
            </Panel>
        </l:Grid>
    </FlexBox>
    
</mvc:View>
