<mvc:View controllerName="login.controller.Join"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <FlexBox
        alignItems="Center"
        justifyContent="Center"
        width="100%"
        height="100%">
        <!-- sap.ui.layout.Grid -->
        <l:Grid >
            <Panel accessibleRole="Region">
                <layoutData>
                    <l:GridData span="XL12 L12 M12 S12" />
                </layoutData>
                <content >
                    <f:SimpleForm>
                        <f:content >
                            
                                 <Text class="row" text="회원가입" />
                            
                            
                                <Label class="row" text="아이디" />
                            
                            
                                <Input class="row" id="idLoginid"  
                                required="true"
                                valueStateText="아이디는 필수 입력 항목 입니다. 5글자 이상 15글자 이하의 아이디를 입력해 주세요."
                                value="{
                                    path: 'member>/Member/LOGIN_ID',
                                    constraints : {
                                        minLength : 5,
                                        maxLength : 12
                                    }
                                }" 
                                maxLength="15"
                                placeholder="아이디"  change="onidChange" />
                            
                            
                                <Label class="row" text="비밀번호"/>
                            
                            
                                <Input class="row" id="idPassword1" value="{
                                    path : 'member>/Member/LOGIN_PW'
                                }"
                                required="true" 
                                placeholder="비밀번호"
                                type="Password" />
                            
                            
                                <Label class="row" text="비밀번호 확인" />
                            
                            
                                <Input 
                                required="true"
                                class="row" id="idPassword2" value="" placeholder="비밀번호" type="Password"  change="onCheckPW"/>

                                <Label class="row" text="이름" />
                            
                            
                                <Input class="row"   
                                required="true"
                                id="idCustName"
                                maxLength="10"
                                valueStateText="이름은 필수 입력 항목 입니다. 2글자 이상 10글자 이하로 입력해 주세요."
                                value="{
                                    path: 'member>/Member/CUST_NAME',
                                    constraints : {
                                        minLength : 2,
                                        maxLength : 10
                                    }
                                }" 
                                placeholder="이름"/>

                                <Label class="row" text="주소" />
                            
                            
                                <Input class="row"   
                                value="{
                                    path: 'member>/Member/CUST_ADDR'
                                }" 
                                placeholder="주소"
                                maxLength="20"
                                />

                                <Label class="row" text="상세주소" />
                            
                            
                                <Input class="row"   
                                value="{
                                    path: 'member>/Member/DETAIL_ADDR'
                                }" 
                                placeholder="상세주소"
                                maxLength="30"
                                />

                                <Label class="row" text="연락처" />
                            
                            
                                <Input class="row"   
                                value="{
                                    path: 'member>/Member/CUST_TEL'
                                }" 
                                placeholder="연락처"
                                maxLength="20"/>

                                <Label class="row" text="생년월일" />

                               	<DatePicker
                                    id="DP2"
                                    value="{
                                        path : 'member>/Member/CUST_BIRTH',
                                        'type':'sap.ui.model.type.Date',
                                        'formatOptions': {
                                            'pattern': 'yyyy.MM.dd'
                                        }
                                    }"/>
     
<!--                             
                                <Input class="row"   
                                value="{
                                    path: 'member>/Member/CUST_BIRTH'
                                }" 
                                placeholder="생년월일"/> -->

                                <Label class="row" text="성별" />
                            
                                <RadioButtonGroup id="rbg2" columns="2" selectedIndex="2">
                                    <RadioButton id="RB2-1" text="남성" />
                                    <RadioButton id="RB2-2" text="여성" />
                                </RadioButtonGroup>

                                <Label class="row" text="이메일" />
                            
                            
                                <Input class="row"   
                                valueStateText="E-mail 주소를 입력해주세요."
                                value="{
                                    path: 'member>/Member/EMAIL',
                                    constraints : {
                                        minLength : 0,
                                        maxLength : 30
                                    },
				                    type: '.customEMailType'
                                }" 
                                type='Email'
                                maxLength="30"
                                placeholder="이메일"/>

                                
                            
                            
                            
                                <HBox class="divisionLine row"/>
                            
                            
                                <Button class="btnLogin row" width="100%" press="onJoinus" type="Emphasized" text="회원가입" />
                            
                        </f:content>
                    </f:SimpleForm>
                </content>
            </Panel>
        </l:Grid>
    </FlexBox>
    
</mvc:View>
